<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/ten_dimen"
    android:paddingBottom="@dimen/ten_dimen"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/txtRank"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/top_heading"
            android:text=""/>
    <com.sell.arkaysell.customviews.CircularImageView
        android:layout_width="@dimen/top_toolbal_size"
        android:layout_height="@dimen/top_toolbal_size"
        android:id="@+id/imgUser"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/ten_dimen" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textPrimary"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sixteen_text_size"
                android:id="@+id/txtName"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text=""/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/five_dimen"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/thrity_dimen"
                    android:layout_height="@dimen/dimen_15dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imgCountyFlag"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/five_dimen"
                    android:layout_below="@+id/imgCountyFlag"
                    android:textSize="@dimen/fourtin_text_size"
                    android:id="@+id/txtScore"
                    android:textColor="@color/orange"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>