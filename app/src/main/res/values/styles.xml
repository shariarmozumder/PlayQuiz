<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_theme_color</item>
        <item name="colorPrimaryDark">@color/app_background_color_1</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="style_question">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="style_btn_answare_option">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/fourtin_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="style_about_text">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarThemeWhite" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/app_theme_color</item>
        <item name="android:textColorPrimary">@color/app_theme_color</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/app_theme_color</item>
    </style>
    <style name="button">
        <item name="android:textSize">@dimen/sixteen_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/five_dimen</item>
        <item name="android:paddingRight">@dimen/five_dimen</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources>